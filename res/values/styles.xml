<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Custom_Title_Style" parent="@android:style/TextAppearance.WindowTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    
    <style name="esg_btn_style" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/scanning_btn_selector</item>
        <item name="android:textColor">@color/btn_textcolor_selector</item>
    </style>
    
    <style name="popWindowAnim" parent="android:Animation" >
        <item name="android:windowEnterAnimation">@anim/right_to_left_in</item>
        <item name="android:windowExitAnimation">@anim/left_to_right_out</item>
    </style>
    
     <style name="ESGStyle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>
    
    <style name="ESGStyle.Dialog.Message" parent="ESGStyle.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <item name="android:windowNoTitle">true</item>
       <!--  <item name="android:background">#00000000</item> -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="ESGFullScreen" parent="Theme.Sherlock.Light">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="STDFullScreen.NoTitle" parent="ESGFullScreen">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
         <item name="android:activityOpenEnterAnimation">@anim/flat_in</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/flat_in</item>
        <item name="android:activityCloseExitAnimation">@anim/left_to_right_out</item>
    </style>

</resources>
