<resources>
    <!-- Application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--导航栏底色-->
        <item name="colorPrimary">@color/solid_orange</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/solid_orange</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--Activity窗口的颜色-->
        <item name="android:windowBackground">@color/white</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">#00ff00</item>
        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <item name="colorControlNormal">#ff0000</item>
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/accent_material_light</item>
        <!--EditText 输入框中字体的颜色-->
        <item name="editTextColor">@android:color/black</item>
    </style>
    
    <style name="AppTheme" parent="BaseAppTheme">
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Custom_Title_Style" parent="@android:style/TextAppearance.WindowTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    
    <style name="esg_btn_style" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/scanning_btn_selector</item>
        <item name="android:textColor">@color/btn_text_selector</item>
    </style>
    
    <style name="popWindowAnim" parent="android:Animation" >
        <item name="android:windowEnterAnimation">@anim/right_to_left_in</item>
        <item name="android:windowExitAnimation">@anim/left_to_right_out</item>
    </style>
    
     <style name="ESGStyle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>
    
    <style name="ESGStyle.Dialog.Message" parent="ESGStyle.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <item name="android:windowNoTitle">true</item>
       <!--  <item name="android:background">#00000000</item> -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="ESGFullScreen" >
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="STDFullScreen.NoTitle" parent="ESGFullScreen">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
         <item name="android:activityOpenEnterAnimation">@anim/flat_in</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/flat_in</item>
        <item name="android:activityCloseExitAnimation">@anim/left_to_right_out</item>
    </style>

</resources>
