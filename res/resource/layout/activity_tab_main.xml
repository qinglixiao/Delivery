<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ActivityTabMain">

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.std.framework.view.NoSlideViewPager
            android:id="@+id/tab_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/splid_line">

        </com.std.framework.view.NoSlideViewPager>

        <View
            android:id="@+id/splid_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/tab_container"
            android:background="@color/light_gray" />

        <com.std.framework.view.MainBottomView
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_bottom_tab_height"
            android:layout_alignParentBottom="true">

        </com.std.framework.view.MainBottomView>
    </RelativeLayout>
</layout>