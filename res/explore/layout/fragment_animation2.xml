<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="FragmentAnimation2Binding">

    </data>

    <RelativeLayout
        android:id="@+id/rich_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_out_frame"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rich_edit_add_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btn_text_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:src="@drawable/rich_edit_bottom_text_normal" />

                <ImageView
                    android:id="@+id/btn_image_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:src="@drawable/rich_edit_bottom_image_normal" />

                <ImageView
                    android:id="@+id/btn_video_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:src="@drawable/rich_edit_bottom_video_normal" />

                <ImageView
                    android:id="@+id/btn_voice_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:src="@drawable/rich_edit_bottom_voice_normal" />

                <ImageView
                    android:id="@+id/btn_map_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:alpha="0"
                    android:src="@drawable/rich_edit_bottom_location_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:background="@color/c20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_add_lv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rich_edit_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="添加"
                    android:textSize="14dp" />
            </LinearLayout>

        </FrameLayout>
    </RelativeLayout>
</layout>