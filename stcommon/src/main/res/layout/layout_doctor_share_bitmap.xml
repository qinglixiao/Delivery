<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="120dp">
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="#39D167">

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/A9"
            android:textSize="16sp"
            tools:text="王德龙"/>

        <me.chunyu.common.view.RoundedImageView
            android:id="@+id/iv_doctor_img"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            app:corner_radius="13dp"
            tools:src="@drawable/coinexchange_icon_gift" />
        <TextView
            android:id="@+id/tv_doctor_type"
            android:layout_width="135dp"
            android:layout_height="15dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/A9"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textSize="10sp"
            android:layout_below="@+id/tv_doctor_name"
            tools:text="肿瘤医院预防科  主治医师"
            />
        <TextView
            android:id="@+id/tv_doctor_address"
            android:layout_width="130dp"
            android:layout_height="15dp"
            android:textColor="@color/A9"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tv_doctor_type"
            tools:text="北京市航空航天总医院"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@color/A9">

        <TextView
            android:id="@+id/tv_doctor_info"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:textColor="#30C265"
            android:textSize="10sp"
            tools:text="北京市航空航天总医院北京市航空航天总医院北京市航空航天总医院北京市航空航天总医院" />
    </RelativeLayout>

</LinearLayout>