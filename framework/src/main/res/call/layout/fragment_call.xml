<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="FragmentCallBinding">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/edge_small"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/edge_small"
            android:paddingRight="@dimen/edge_small">

            <FrameLayout
                android:id="@+id/layout_choose_voice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/sel_video" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/common_arrow_right" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray"
                android:paddingLeft="@dimen/edge_small" />

            <include
                android:id="@+id/v_play_voice"
                layout="@layout/view_play_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

        </LinearLayout>
    </LinearLayout>

</layout>