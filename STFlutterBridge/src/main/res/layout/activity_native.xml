<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/flutter_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical" />

    <fragment
        android:id="@+id/fragment"
        android:name="me.chunyu.flutter.CYFlutterFragment"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toRightOf="@id/flutter_container" />

    <me.chunyu.flutter.CYFlutterView
        android:id="@+id/flutter_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/flutter_container"
        app:route="main" />

</android.support.constraint.ConstraintLayout>